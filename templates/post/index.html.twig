{% extends 'base.html.twig' %}
{% block title %}Posts{% endblock %}
{% block body %}
<div class="flex items-center justify-between mb-4">
  <h1 class="text-2xl font-semibold">All Posts</h1>
  {% if app.user %}
    <a href="{{ path('app_post_new') }}" class="px-3 py-1.5 rounded bg-blue-600 text-white hover:bg-blue-700">+ New</a>
  {% endif %}
</div>

<div class="bg-white border rounded-xl shadow-sm divide-y">
  {% for post in posts %}
    <div class="p-5">
      <a class="text-lg font-semibold text-blue-700 hover:underline"
         href="{{ path('app_post_show_slug', { slug: post.slug }) }}">{{ post.title }}</a>
      <div class="text-sm text-gray-500 mt-1">
        {{ post.createdAt ? post.createdAt|date('Y-m-d H:i') : '' }}
        {% if post.author %} • by {{ post.author.email }}{% endif %}
      </div>
      <p class="mt-2 text-gray-800">{{ post.content|u.truncate(180, '…') }}</p>
    </div>
  {% else %}
    <div class="p-5 text-gray-600">No posts yet.</div>
  {% endfor %}
</div>
{% endblock %}
